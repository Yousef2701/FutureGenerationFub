@model CenterManagement.ViewModels.UpdateTeacherDataVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/UpdateTeacherData.css">
</head>
<body>
    <div class="scroller"></div>
    <div class="wrapper">
        <form novalidate="" enctype="multipart/form-data" asp-controller="Teachers" asp-action="UpdateTeacherData" method="post">
            <h1>Update Your Data</h1>
            <div class="input-box my-2">
                <label asp-for="FristName" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Frist Name</label>
                <input asp-for="FristName" type="text" value="@ViewBag.Teacher.FristName" required autocomplete="off" />
            </div>
            <div class="input-box my-2">
                <label asp-for="LastName" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Last Name</label>
                <input asp-for="LastName" type="text" value="@ViewBag.Teacher.LastName" required autocomplete="off" />
            </div>
            <div class="input-box my-2">
                <label asp-for="PhoneNumber" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" type="text" value="@ViewBag.Teacher.PhoneNumber" required autocomplete="off" />
            </div>
            <div class="input-box my-2">
                <label asp-for="Email" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Email</label>
                <input asp-for="Email" type="text" value="@ViewBag.Teacher.Email" required autocomplete="off" />
            </div>
            <div class="input-box my-2">
                <label asp-for="Subject" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Subject</label>
                <select asp-for="Subject" required>
                    <option value="@ViewBag.Teacher.Subject" selected>@ViewBag.Teacher.Subject</option>
                    <option value="Biology">Biology</option>
                    <option value="English">English</option>
                    <option value="Geography">Geography</option>
                    <option value="Physics">Physics</option>
                    <option value="French">French</option>
                    <option value="Psychology">Psychology</option>
                    <option value="Chemistry">Chemistry</option>
                    <option value="History">History</option>
                    <option value="Mathematics">Mathematics</option>
                    <option value="Arabic">Arabic</option>
                    <option value="Philosophy">Philosophy</option>
                    <option value="German">German</option>
                </select>
            </div>
            <div class="input-box my-2">
                <label asp-for="Governorate" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Governorate</label>
                <select asp-for="Governorate" id="governorates" onchange="updateCities()" required>
                    <option value="@ViewBag.Teacher.Governorate" selected>@ViewBag.Teacher.Governorate</option>
                    <option value="Alexandria">Alexandria</option>
                    <option value="Aswan">Aswan</option>
                    <option value="Asyut">Asyut</option>
                    <option value="Beheira">Beheira</option>
                    <option value="Beni Suef">Beni Suef</option>
                    <option value="Cairo">Cairo</option>
                    <option value="Dakahlia">Dakahlia</option>
                    <option value="Damietta">Damietta</option>
                    <option value="Faiyum">Faiyum</option>
                    <option value="Gharbia">Gharbia</option>
                    <option value="Giza">Giza</option>
                    <option value="Ismailia">Ismailia</option>
                    <option value="Kafr El Sheikh">Kafr El Sheikh</option>
                    <option value="Luxor">Luxor</option>
                    <option value="Matruh">Matruh</option>
                    <option value="Minya">Minya</option>
                    <option value="Monufia">Monufia</option>
                    <option value="New Valley">New Valley</option>
                    <option value="North Sinai">North Sinai</option>
                    <option value="Port Said">Port Said</option>
                    <option value="Qalyubia">Qalyubia</option>
                    <option value="Qena">Qena</option>
                    <option value="Red Sea">Red Sea</option>
                    <option value="Sharqia">Sharqia</option>
                    <option value="Sohag">Sohag</option>
                    <option value="South Sinai">South Sinai</option>
                    <option value="Suez">Suez</option>
                </select>
            </div>
            <div class="input-box  my-2">
                <label asp-for="City" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">City</label>
                <select asp-for="City" id="cities" required>
                    <option value="@ViewBag.Teacher.City" selected>@ViewBag.Teacher.City</option>
                </select>
            </div>
            <div class="col-8 my-2">
                <label asp-for="ImageFile" style="font-size:1.2em;font-weight:500;color:#fff;" class="form-label">Upload Image </label>
                <input type="file" asp-for="ImageFile" style="border-radius:40px;border: 2px solid rgba(255, 255, 255, 0.2);color:#fff;" enctype="multipart/form-data" accept="image/jpg" runat="server" />
            </div>

            <button type="submit" class="btn  my-2" onclick="displayAlertSuccess()">Save Update</button>
            <a asp-controller="Teachers" asp-action="PersonalPage" style="text-align:center;" class="btn cancel col-5  my-2">Cancel</a>
        </form>
    </div>

    @section Scripts{
        <script>
            function displayAlertSuccess() {
                Swal.fire('Completed', 'Your Data Is Updated Successfully', 'success');
            }
        </script>
    }

