@model CenterManagement.ViewModels.ParcodeVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AddNewLesson.css">
    <style>
        h1{
            font-size: 28px!important;
        }
    </style>
</head>
<body>
    <div class="scroller"></div>
    <div class="wrapper">
        <form asp-controller="" asp-action="" method="get">
            <h1>Enter The Parcode</h1>
            <div class="input-box">
                <input asp-for="Parcode" type="text" placeholder="Parcode" required autocomplete="off" />
            </div>

            <input hidden asp-for="CourseId" value="@ViewBag.Id" />
            <button type="submit" class="btn" onclick="displayAlertSuccess()">Enter Parcode</button>
        </form>
    </div>

</body>
</html>