@model Question

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AddQuestion.css">
</head>
<body>
    <div class="scroller"></div>
    <div class="wrapper">
        <form novalidate="" enctype="multipart/form-data" asp-action="AddQuestion" method="post">
            <h1>Add Question Data</h1>
            <div class="input-box d-none">
                <input asp-for="ExamId" id="getExamID" type="text" placeholder="The Exam Id" required autocomplete="off" />
            </div>
            <div class="input-box">
                <input asp-for="Quest" type="text" class="clear" placeholder="The Question" required autocomplete="off" />
            </div>
            <div class="input-box">
                <input asp-for="FristAnswer" type="text" class="clear" placeholder="The Frist Choose" required autocomplete="off" />
            </div>
            <div class="input-box">
                <input asp-for="SecondAnswer" type="text" class="clear" placeholder="The Second Choose" required autocomplete="off" />
            </div>
            <div class="input-box">
                <input asp-for="ThirdAnswer" type="text" class="clear" placeholder="The Third Choose" required autocomplete="off" />
            </div>
            <div class="input-box">
                <input asp-for="ForthAnswer" type="text" class="clear" placeholder="The Fourth Choose" required autocomplete="off" />
            </div>
            <div class="input-box">
                <select asp-for="CorrectAnswer" required>
                    <option class="selected" value="" selected>Select The Correct Choose</option>
                    <option value="Frist">Frist Choose</option>
                    <option value="Second">Second Choose</option>
                    <option value="Third">Third Choose</option>
                    <option value="Fourth">Fourth Choose</option>
                </select>
            </div>

            <button type="submit" class="btn" onclick="displayAlertSuccess()">Save The Question</button>
            <input type="submit" class="btn" style="background-color:#2ecc71;color:white;" value="Finish Exam" asp-action="Dashboard" />
        </form>
    </div>

    @section Scripts{
        <script>
            function displayAlertSuccess() {
                Swal.fire('Completed', 'The Question is Added Successfully', 'success');
            }
            document.querySelectorAll(".clear").forEach(e=>{
                e.value = "";
            })
            document.querySelector(".selected").selected = true;
            document.getElementById("getExamID").value = localStorage.getItem("teacherExamID");
        </script>
    }

</body>
</html>
