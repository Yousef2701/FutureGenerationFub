@model LessonTask

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AddQuestion.css">
</head>
<body>
    <div class="scroller"></div>
    <div class="wrapper">
        <form novalidate="" enctype="multipart/form-data" asp-action="AddLessonTask" method="post">
            <h1>Add Lesson Tasks</h1>
            <div class="input-box d-none">
                <input asp-for="LessonId" id="getLessonID" type="text" placeholder="The Lesson Id" required autocomplete="off" />
            </div>
            <div class="input-box">
                <input asp-for="Question" type="text" class="clear" placeholder="The Question" required autocomplete="off" />
            </div>

            <button type="submit" class="btn" onclick="displayAlertSuccess()">Save The Question</button>
            <input type="submit" class="btn" style="background-color:#2ecc71;color:white;" value="Finish Task" asp-action="Dashboard" />
        </form>
    </div>

        <script>
            function displayAlertSuccess() {
                Swal.fire('Completed', 'The Question is Added Successfully', 'success');
            }
            document.querySelectorAll(".clear").forEach(e => {
                e.value = "";
            })
            document.getElementById("getLessonID").value = localStorage.getItem("teacherLessonID");
        </script>
</body>
</html>