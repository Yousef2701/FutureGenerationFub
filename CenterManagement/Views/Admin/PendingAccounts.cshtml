@inject CenterManagement.Data.Data.ApplicationDbContext _context
@inject IHttpContextAccessor _httpContextAccessor
@using System.Security.Claims
@model CenterManagement.ViewModels.UsernameVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Admin.css">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Roboto:wght@100;300;400;500;700;900&family=Sigmar+One&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="bootstrap.min.css" />
    <title>Admin Dashboard</title>
    <style>
        html::-webkit-scrollbar,.comments::-webkit-scrollbar,.dropdown-content::-webkit-scrollbar{
            width: 10px;
            right: 0;
        }

        html::-webkit-scrollbar-thumb,.comments::-webkit-scrollbar-thumb,.dropdown-content::-webkit-scrollbar-thumb{
            background-color: #140920;
        }

        html::-webkit-scrollbar-track,.comments::-webkit-scrollbar-track,.dropdown-content::-webkit-scrollbar-track{
            background-color: white;
        }

        tr:nth-child(odd) {
            background-color: #262525;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #555454;
            color: white;
        }

        table {
            min-width: 900px !important;
            color: white;
            margin-bottom: 50px;
        }

        thead th {
            padding-left: 230px;
        }

        thead td {
            font-weight: bold;
            background-color: #0c1527;
        }

        td {
            font-size: 15px;
            padding: 4px;
            width: fit-content;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="scroller"></div>
    <div class="container mt-5" style="padding-top:10px;">
        <h1 class="text-center my-4">Pending Accounts</h1>
        <!--Pending Table-->
        <table>
            <thead>
                <tr>
                    <th>User</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (string item in @ViewBag.Usernames)
                {
                       <tr>
                            <td style="width:50%;">@item</td>
                            <td style="width:50%;">
                                <form asp-action="ActiveAccounts">
                                    <input hidden value="@item" asp-for="Username" />
                                    <button type="submit" class="btn btn-success m-1" style="width:70%;">Active Account</button>
                                </form>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>