@model Lesson

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="~/css/Index.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Roboto:wght@100;300;400;500;700;900&family=Sigmar+One&display=swap" rel="stylesheet">
        <title>Al-Eissa Academy</title>
        <style>
            body{
                background-color:#F2F2F2;
            }

            .videos-container{
                display:flex;
                flex-direction:row;
                justify-content:space-around;
                flex-wrap:wrap;
                padding:15px;
            }

            .video{
                width:330px;
                margin-bottom:40px;
                cursor:pointer;
                border-radius:10px;
                border:3px solid #EAEAEA;
                background-color:#fff;
            }

            .thumbnail{
                width:100%;
                height:150px;
                margin-bottom:12px;
            }

            .thumbnail img{
                height:100%;
                width:100%;
                border-top-left-radius: 7px;
                border-top-right-radius: 7px;
            }

            .video-details{
                display:flex;
                padding: 0 10px;
                border-bottom-left-radius:10px;
                border-bottom-right-radius:10px;
            }

            .creator-img img{
                height:45px;
                width:45px;
                border-radius:50%;
                margin-right:12px;
            }

            .title{
                display:flex;
                flex-direction:column;
            }

            .title a{
                text-decoration:none;
                color:rgb(3,3,3);
                font-size:1.6rem;
                max-width: 278px;
                font-weight:500;
                line-height:2.2rem;
                margin-bottom:4px;
                overflow:hidden;
                display:-webkit-box;
                -webkit-line-clamp:2;
                -webkit-box-orient:vertical;
            }

            .title h6{
                font-size:1rem;
                max-width: 278px;
                font-weight:200;
                line-height:1.5rem;
                margin-bottom:4px;
                overflow:hidden;
                display:-webkit-box;
                -webkit-line-clamp:2;
                -webkit-box-orient:vertical;
            }

            .start-button {
                display: inline-block;
                padding: 7px 20px;
                font-size: 16px;
                background-color: #2ecc71;
                color: #fff;
                text-decoration: none;
                border: none;
                border-radius: 10px;
                cursor: pointer;
                margin:10px auto;
            }

            .start-button:hover {
                color: white;
                background-color: #24A35A;
            }
        </style>
    </head>
    <body class="all-stores-page-body">
        <div class="scroller"></div>
        <h2 style=" font-size: 36px;text-align: center;margin:110px auto 30px;font-weight:600;">Mr/@ViewBag.Teacher.FristName @ViewBag.Teacher.LastName - @ViewBag.Month Lessons For @ViewBag.Year</h2>
        <div class="videos-container">

            @foreach(Lesson item in @ViewBag.Lessons){
                <div class="video">
                    <div class="thumbnail">
                        <img src="~/Uploads/@item.ThumbnailUrl" />
                    </div>
                    <div class="video-details">
                        <div class="creator-img">
                            <img src="~/Uploads/@ViewBag.Teacher.ImageUrl" />
                        </div>
                        <div class="title">
                            <a class="video-title">@item.LessonTitle</a>
                            <h6 class="video-creotor">@item.Discreption</h6>
                        </div>
                    </div>
                    <form asp-action="Lesson_Details" style="display:flex;">
                        <input hidden value="@item.Id" asp-for="Id" />
                        <button class="start-button">Start Lesson</button>
                    </form>
                </div>
            }
            
        </div>
    </body>
</html>